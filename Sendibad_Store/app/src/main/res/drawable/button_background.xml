<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape>
        <corners android:radius="100dp"/>
        <gradient
            android:startColor="@color/gradient_start_color"
            android:endColor="@color/gradient_end_color"/>
            android:angle="0" android:gradientRadius="0dp" android:type="linear"/>
    </shape>
</item>
    <item android:state_pressed="true">
    <shape>
        <corners android:radius="100dp"/>
        <gradient
            android:startColor="@color/gradient_start_color"
            android:endColor="@color/gradient_start_color"
            android:centerColor="@color/gradient_end_color"
            android:angle="90" android:gradientRadius="0dp"
            android:type="linear"/>
    </shape>
</item>
</selector>